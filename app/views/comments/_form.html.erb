<h2>Join Discussion: </h2>
  <div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <% if !user_signed_in? %>
          <%= form_for([@post, @post.comments.build]) do |f| %>
          <div class="form-group">
            <h1><%= f.label :title %></h1>
            <%= f.text_field :name, class: 'form-control', autofocus: true %>
          </div><br>
          <div class="form-group">
            <h2><%= f.label :description %></h2><br>
            <%= f.text_area :content, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.button(@posts, class: "btn btn-primary btn-lg btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Processing..."}) %>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
</div>
