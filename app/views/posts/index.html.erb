<br><br><br>
<div class="container">
  <h1 class="page-header text-center">Posts</h1>
  <br><br><br>
        <!-- Team Members Row -->
        <div class="row">
            <div class="col-lg-12">
              <% @posts.each do |post| %>
            </div>
            <div class="col-md-3 col-sm-6">
                <img class="img-circle img-responsive img-center wow fadeInLeftBig" src="assets/male.svg" alt="" style="width:150px;">
                <hr>
                  <h2 class="title text-center" style="padding-right: 40px;"><%= link_to post.title, post %>
                    <br><br>
                    <small class="text-center">Submitted about <%= time_ago_in_words(post.created_at) %> ago</small>
                  </h2>
                <hr>
                <% end %>
            </div>
        </div>
    </div>
    <!-- /.container -->
