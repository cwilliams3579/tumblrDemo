<% provide(:title, @post.title) %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br><br><br><br><br>
  <br>
  <div class="container">

  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: 'form-control', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.button(@posts, class: "btn btn-primary btn-lg btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Processing..."}) %>
        </div>
        <% end %>

      </div>
    </div>
    <br>
    <div class="text-center">
      [ <%= link_to "Cancel request and return to posts", posts_path %> ]
    </div>
</div>
